<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:observableBindingWpfSample" x:Class="observableBindingWpfSample.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:TestObject/>
    </Window.DataContext>
    <Grid>
        <Label Content="{Binding FirstName}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        
        <Button Content="Button" HorizontalAlignment="Left" Command="{Binding OnButtonClick}" Margin="159,7,0,0" VerticalAlignment="Top" Width="75" />
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,35,0,0" TextWrapping="Wrap" Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="131"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="305,35,0,0" TextWrapping="Wrap" Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="131"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="159,35,0,0" TextWrapping="Wrap" Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
        <Label Content="{Binding FullName, FallbackValue='fullName'}" HorizontalAlignment="Left" Margin="136,63,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
